<html>
  <head>
    <link rel="stylesheet" type="text/css" href="/public/inncognito.css" >
  </head>
 <body> 
<p>My requests:

<p>You currently have 1 booking requests

<section>
<p>My properties:
    <% @properties.each do |property| %>
      <%if @user.id == property.user_id %>
      <ul>
        <b><%= property.name%></b>
        <li><%= property.description%></li>
        <li><%= property.cpn%></li>  
      </ul>
      <%end%>
    <%end%>

</section>

<section>

<p>My bookings:
  <% @booking.each do |booking| %>
  <ul>
    <b><%= booking.user_id%></b>
    <li><%= booking.property_id%></li>
    <li><%= booking.start_date%></li>  
    <li><%= booking.end_date%></li>  
  </ul>
  <form action="/view-requests" method="post">
    <input type="submit" value="Approve">
  </form>
  <form action="/view-requests" method="post">
    <input type="submit" value="Deny">
  </form>
<%end%>
</section>
</body>
