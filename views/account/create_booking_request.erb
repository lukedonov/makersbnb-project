    <input type="hidden" name="owner_id" value="<%= @property.user_id %>">
    <input type="date" name="start_date" id="startDate"/>
    <input type="date" name="end_date" id="endDate"/>
    <input type="submit" value="Request booking"/>
    <% end %>
  </form>
