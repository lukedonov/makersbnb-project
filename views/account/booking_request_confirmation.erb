<html>
	<head>
		<link rel="stylesheet" type="text/css" href="stylesheets/css/style.css" >
	</head>
	<body>
	<%if !@error%>
		<div class="verticalCenter">
			Your request to book <%= @property.name %> for <%= @duration %> nights has been sent
			<form action="/" method="get">
				<input type="submit" value="Back to properties">
			</form>
		</div>
		<%else%>
		<p><%=@error%></p>
		<p><a href="javascript:history.back()">Try another date</a></p>
	<%end%>
	</body>
</html>
