      <input type="submit" value="New Listing">
    </form>
  <%end%>
    <% @listings.each do |listing| %>
      <ul>
        <b><%= listing.name%></b>
        <li><%= listing.description%></li>
        <li><%= listing.cpn%></li>
      </ul>
    <%end%>
