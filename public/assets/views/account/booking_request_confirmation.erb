<div class="center">
	<%if !@error%>
		<div id="bookingConfirmed">
			<p>Your request to book <%= @property.name %> for <%= @duration %> nights has been sent</p>
			<form action="/" method="get">
				<input type="submit" value="Back to properties">
			</form>
		</div>
	<%else%>
		<p><%=@error%></p>
		<p><a href="javascript:history.back()">Try another date</a></p>
	<%end%>
</div>
