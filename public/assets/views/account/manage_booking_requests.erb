							</form>
							<form action="/account/reject-booking" method="post">
								<input type="hidden" name="booking_id_2" value="<%= booking.id %>">
								<input type="submit" value="Reject">
							</form>
							<% end %>
						<%end%>   
    </section>
			<section>
				<p>My properties:
          <p>You currently have <%= @properties.count %> advertised <% if @bookings.count == 0 || @bookings.count > 1 %>
                                                                      <%= "properties" %>
                                                                    <% else %>
                                                                      <%= "property" %>
                                                                    <% end %></p>
					<% @properties.each do |property| %>
						<div class="block">
							<p><b><%= property.name%></b></p>
							<p><%= property.description%></p>
